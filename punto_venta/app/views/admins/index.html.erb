<div class="col-md-10 col-md-offset-1">
  <h2 class="alert alert-info">
    <strong>Administracion de Usuarios</strong> 
  </h2>
  <div data-role="controlgroup" data-type="horizontal">
    <%= link_to ' Crear usuario', new_admin_path, "data-role" => "button" %>
    <%= link_to ' Regresar', root_path , "data-role" => "button", "data-theme" => "b"%>
  </div>
  <div class="table-responsive">
    <table class="table table-bordered top">
    <thead>
      <tr>
        <th>Correo de usuario</th>

      </tr>
    </thead>
      <tbody>

        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td>
              <%= link_to "Eliminar", admin_destroy_path(user), method: :delete, data: { confirm: "El usuario sera eliminado?" }%>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</div>